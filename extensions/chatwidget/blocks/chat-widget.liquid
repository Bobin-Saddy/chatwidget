<style>
:root {
  --chat-primary: #6366f1;
  --chat-primary-dark: #4f46e5;
  --chat-bg: #ffffff;
  --chat-text-main: #1f2937;
  --chat-text-muted: #6b7280;
  --chat-bubble-user: #6366f1;
  --chat-bubble-admin: #f3f4f6;
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* Launcher */
#chat-launcher {
  position: fixed; bottom: 25px; right: 25px;
  width: 64px; height: 64px; border-radius: 50%;
  background: var(--chat-primary); color: #fff;
  display: flex; align-items: center; justify-content: center;
  cursor: pointer; z-index: 10000; box-shadow: 0 10px 15px rgba(99, 102, 241, 0.3);
  transition: transform 0.3s;
}
#chat-launcher:hover { transform: scale(1.05); }

/* Widget Container */
#chat-widget {
  position: fixed; bottom: 105px; right: 25px;
  width: 380px; height: 600px; max-height: calc(100vh - 140px);
  background: var(--chat-bg); border-radius: 24px;
  display: flex; flex-direction: column; overflow: hidden;
  box-shadow: var(--shadow-xl); z-index: 9999;
  transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  border: 1px solid rgba(0,0,0,0.05);
}
.chat-hidden { opacity: 0; transform: translateY(20px) scale(0.95); pointer-events: none; }
.chat-visible { opacity: 1; transform: translateY(0) scale(1); pointer-events: all; }

/* Header */
#chat-header { background: var(--chat-primary); padding: 20px; color: #fff; display: flex; justify-content: space-between; align-items: center; }
.header-content { display: flex; align-items: center; gap: 12px; }
.avatar-stack img { width: 40px; height: 40px; border-radius: 12px; background: #fff; }
.avatar-status { position: absolute; bottom: 18px; left: 50px; width: 12px; height: 12px; background: #22c55e; border: 2px solid var(--chat-primary); border-radius: 50%; z-index: 2; }
.header-title { display: block; font-weight: 700; font-size: 16px; }
.header-subtitle { font-size: 12px; opacity: 0.9; display: flex; align-items: center; gap: 4px; }
.pulse { width: 6px; height: 6px; background: #4ade80; border-radius: 50%; animation: pulse-anim 2s infinite; }
#chat-close { background: none; border: none; color: #fff; cursor: pointer; opacity: 0.7; }

/* Steps */
.step-container { flex: 1; display: flex; flex-direction: column; overflow: hidden; }
.welcome-card { padding: 40px 30px; text-align: center; }
.welcome-emoji { font-size: 48px; margin-bottom: 15px; }
.input-group { display: flex; flex-direction: column; gap: 12px; margin-top: 20px; }
.name-row { display: flex; gap: 10px; }
.input-group input { padding: 14px; border: 1px solid #e5e7eb; border-radius: 12px; font-size: 14px; width: 100%; outline: none; }
.input-group input:focus { border-color: var(--chat-primary); }
#chat-submit-info { background: var(--chat-primary); color: white; border: none; padding: 14px; border-radius: 12px; font-weight: 600; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 10px; }

/* Messages */
#chat-messages { flex: 1; overflow-y: auto; padding: 20px; background: #fafafa; display: flex; flex-direction: column; gap: 15px; }
.msg { max-width: 80%; display: flex; flex-direction: column; }
.msg.user { align-self: flex-end; }
.msg.admin { align-self: flex-start; }
.msg-content { padding: 12px 16px; border-radius: 18px; font-size: 14px; line-height: 1.5; }
.user .msg-content { background: var(--chat-primary); color: white; border-bottom-right-radius: 4px; }
.admin .msg-content { background: white; color: var(--chat-text-main); border-bottom-left-radius: 4px; border: 1px solid #eee; }
.msg-meta { font-size: 10px; color: var(--chat-text-muted); margin-top: 4px; }

/* Footer */
#chat-footer { padding: 15px 20px 20px; background: #fff; border-top: 1px solid #f3f4f6; }
.input-wrapper { display: flex; align-items: center; background: #f3f4f6; border-radius: 16px; padding: 6px 10px; gap: 8px; }
.tool-btn { background: none; border: none; cursor: pointer; padding: 6px; opacity: 0.6; }
#chat-input { flex: 1; border: none; background: transparent; outline: none; font-size: 14px; }
#chat-send { background: var(--chat-primary); color: white; border: none; width: 36px; height: 36px; border-radius: 10px; cursor: pointer; display: flex; align-items: center; justify-content: center; }

@keyframes pulse-anim { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }

.hidden-picker { display: none !important; }
#emoji-picker { position: absolute; bottom: 85px; left: 20px; right: 20px; background: white; border-radius: 16px; box-shadow: var(--shadow-xl); border: 1px solid #eee; padding: 12px; display: grid; grid-template-columns: repeat(6, 1fr); gap: 8px; z-index: 10; }
#emoji-picker span { cursor: pointer; font-size: 20px; text-align: center; }
</style>

<script>
(() => {
  const shop = "{{ shop.permanent_domain }}";
  const APP_URL = "https://chatwidget-production-0035.up.railway.app/"; 
  const widget = document.getElementById("chat-widget");
  const launcher = document.getElementById("chat-launcher");
  const onboardingStep = document.getElementById("chat-onboarding-step");
  const chatStep = document.getElementById("chat-chat-step");
  const msgBox = document.getElementById("chat-messages");
  const chatInput = document.getElementById("chat-input");

  // Toggle Widget
  launcher.onclick = () => {
    const isVisible = widget.classList.contains("chat-visible");
    widget.classList.toggle("chat-visible", !isVisible);
    widget.classList.toggle("chat-hidden", isVisible);
    document.getElementById("launcher-icon").style.display = isVisible ? "block" : "none";
    document.getElementById("close-launcher-icon").style.display = isVisible ? "none" : "block";
  };

  document.getElementById("chat-close").onclick = () => launcher.click();

  // Registration Logic
  const checkSession = () => {
    const email = localStorage.getItem("chat_user_email");
    if (email) {
      onboardingStep.style.display = "none";
      chatStep.style.display = "flex";
      loadMessages();
    }
  };

  document.getElementById("chat-submit-info").onclick = async () => {
    const fname = document.getElementById("chat-fname").value.trim();
    const lname = document.getElementById("chat-lname").value.trim();
    const email = document.getElementById("chat-email").value.trim();

    if (!fname || !lname || !email) return alert("All fields are required");

    // Persist user locally
    localStorage.setItem("chat_user_fname", fname);
    localStorage.setItem("chat_user_lname", lname);
    localStorage.setItem("chat_user_email", email);
    localStorage.setItem("chat_session", Date.now().toString());

    // Register user in Prisma via Remix API
    await fetch(`${APP_URL}/api/chat/register`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ shop, fname, lname, email, sessionId: localStorage.getItem("chat_session") })
    });

    onboardingStep.style.display = "none";
    chatStep.style.display = "flex";
    loadMessages();
  };

  // Chat Logic
  const addMessageToUI = (m) => {
    const div = document.createElement("div");
    div.className = `msg ${m.sender}`;
    div.innerHTML = `
      <div class="msg-content">${m.fileUrl ? `<a href="${m.fileUrl}" target="_blank" style="color:inherit">ðŸ“Ž Attached File</a>` : m.message}</div>
      <div class="msg-meta">${new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</div>
    `;
    msgBox.appendChild(div);
    msgBox.scrollTop = msgBox.scrollHeight;
  };

  async function loadMessages() {
    const sessionId = localStorage.getItem("chat_session");
    try {
      const res = await fetch(`${APP_URL}/api/chat/messages?shop=${shop}&sessionId=${sessionId}`);
      const data = await res.json();
      msgBox.innerHTML = ''; 
      data.forEach(addMessageToUI);
    } catch (e) { console.error("Sync error", e); }
  }

  async function handleSend() {
    const text = chatInput.value.trim();
    if (!text) return;
    const sessionId = localStorage.getItem("chat_session");
    
    chatInput.value = "";
    addMessageToUI({ sender: 'user', message: text });

    await fetch(`${APP_URL}/api/chat/message`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ 
        shop, 
        sessionId, 
        message: text,
        email: localStorage.getItem("chat_user_email")
      })
    });
  }

  document.getElementById("chat-send").onclick = handleSend;
  chatInput.onkeypress = (e) => e.key === "Enter" && handleSend();

  // Emoji Picker
  const picker = document.getElementById("emoji-picker");
  const emojis = ["ðŸ˜Š","ðŸ‘‹","ðŸ™Œ","ðŸ”¥","âœ…","ðŸ¤”","ðŸ’¡","ðŸš€"];
  picker.innerHTML = emojis.map(e => `<span>${e}</span>`).join("") ;
  document.getElementById("emoji-btn").onclick = () => picker.classList.toggle("hidden-picker");
  picker.onclick = (e) => {
    if(e.target.tagName === 'SPAN') {
      chatInput.value += e.target.innerText;
      picker.classList.add("hidden-picker");
      chatInput.focus();
    }
  };

  // Init
  checkSession();
  setInterval(() => {
    if (localStorage.getItem("chat_user_email")) loadMessages();
  }, 5000);
})();
</script>

